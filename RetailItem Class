package week.pkg5.objects.q4;

/**
 * Accepts and sets item price, how many units are in stock, and a short
 * description of the item.
 */
public class RetailItem {
    public double price;
    public int unitsOnHand;
    public String description;
    
    /**
     * Constructor that assigns values to each field.
     * @param price Double representing the price of an item.
     * @param unitsOnHand Integer number of items in stock.
     * @param description Brief string description of an item.
     */
    public RetailItem(double price, int unitsOnHand, String description){
        this.price = price;
        this.unitsOnHand = unitsOnHand;
        this.description = description;
    }
    
    public void setPrice(double price){
        this.price = price;
    }
    
    public void setDescription(String description){
        this.description = description;
    }
    
    public void setUnits(int unitsOnHand){
        this.unitsOnHand = unitsOnHand;
    }
    
    
    public double getPrice(){return this.price; }
    public int getUnitsOnHand(){return this.unitsOnHand; }
    public String getDescription(){return this.description; }
    
}
